<% include ../partials/boilerplate %>

<div class='row center'>
  <div class="spacer"></div>
    <a class='btn waves-effect waves-light center purple' href='/animals'>Return to Animal index</a>
</div>

<div class="container">
  <div class="section">
    <div class="row">
      <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
