          <form method='POST' action='/animals/<%= animals.id %>?_method=DELETE'>
              <buttons class="btn waves-effect waves-light center red">
                <input class='deleteAnimals addAnimalslink'type='submit' value='Delete Your Animal üôà' />
              </button>
          </form>
        </div><!-- end of deleteAnimal -->
        
        <p class="grey lighten-3 static-text black-text">üëâüèæ Your Stories:</p>

        <table>
          <tbody>
