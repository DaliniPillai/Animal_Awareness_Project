<% include ../partials/boilerplate %>

<div class='add'>
    <a class='addAnimalsLink' href='/animals'>Return to Animal index</a>
</div>

<div class='animalsFirst'>
    <div class='animalsBreed'>
    <% animalsData.forEach(function(animal) { %>
      <h3><%= animal.animal_type %></h3>
      <div class='meta'>
        <span class='animalsImgContainer'><img class='animalsImages'src='<%= animal.animal_pic_url %>'></span>
        <span class='stories'><%= animal.users %></span>
      </div>
      <div class='edit'>
        <a class="buttonAnimalsLink" href='/animals/<%= animal.id %>'>Go to My Page</a>
        <a class="buttonAnimalsLink editMe" href='/animals/edit/<%= animal.id %>'>Edit Me!</a>
      </div>
      <form method='POST' action='/animals/<%= animal.id %>?_method=DELETE'>
      <div class=''>
        <input class='deleteAnimals addAnimalslink'type='submit' value='Delete your Animal :(' />
        </div>
</div>
      </form>
    <% }) %>
      
</div>

<% include ../partials/end %>





