<% include ../partials/boilerplate %>
  <form class="addAnimalsForm" method='POST' action='/animals'>

    <h2>Add an Animal</h2> 
  
    <div class="form-group">
      <label>Animal Type:</label>
      <input name='animal_type' type='text' />
    </div>

    <div class="form-group">
      <label>Enter some info about this here animal 🐻:</label> 
      <input name='animal_info' type='text'  />
  </div>

  <div class="form-group">
      <label>Enter a new image URL:</label> 
      <input name='animal_pic_url' type='text'  />
  </div>
    <label>Add a story:</label> <br/>
    <input type="text" name="content" /> <br>
    <input type="submit" value="Submit">
  </form>


<% include ../partials/end %>

